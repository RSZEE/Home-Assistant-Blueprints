blueprint:
  name: Notify Devices At A Time.
  description: Notifications But Extra.
  domain: automation
  input:
    time:
      name: Time
      description: A time to notify Someone.
      selector:
        boolean:
    notify:
       name: Notify
       description: The person to notify
       selector:
         device:
           integration: mobile_app

trigger:
  - platform: time
    at: !input time
condition: []
action:
  - service: !input notify
    metadata: {}
    data: {}
   
