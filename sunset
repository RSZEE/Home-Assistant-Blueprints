blueprint:
  name: Sunset Lights
  description: Turn a light on at sunset.
  domain: automation
  input:
    light:
      name: Light
      description: Light that will turn on at sunset.
      selector:
        target:
          entity:
            filter:
              - domain: light

trigger:
  - platform: sun
    event: sunset
    offset: 0

action:
  - service: light.turn_on
    metadata: {}
    data: {}
    target:
      entity_id: !input light
